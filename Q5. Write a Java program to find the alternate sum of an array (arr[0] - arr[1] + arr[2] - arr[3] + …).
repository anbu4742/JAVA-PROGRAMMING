import java.util.*;

public class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int n = sc.nextInt();
        int arr[] = new int[n];
        for(int i=0;i<n;i++){
            arr[i] = sc.nextInt();
        }
        int altsum = 0;
        for(int i=0;i<n;i++){
          if(i%2==0){
            altsum += arr[i];
          }
          else{
            altsum -= arr[i];
          }
        }
        System.out.println(altsum);
    }
}
