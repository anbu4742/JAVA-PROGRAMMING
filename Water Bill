import java.util.*;
public class Main{
    public static void main(String[] args){
        Scanner sc = new Scanner(System.in);
        int a = sc.nextInt();
        double bill;
        if(a<=1000){
            bill = 0;
        }       
        else if(a<=3000){
            bill = ((a-1000)/1000.0)*5;
        }
        else{
            bill = (2000/1000.0)*5 + (((a-3000)/1000.0)*10);
        }
        System.out.println("Water Bill:" + bill);
    }
}
