import java.util.*;

public class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int n = sc.nextInt();
        String b = "";
        while(n!=0){
            int digit = n%2;
            b = digit+b;
            n=n/2;
        }
        System.out.println(b);
    }
}
