import java.util.*;

public class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int n = sc.nextInt();
        int one = 0;
        int zero = 0;
        while(n!=0){
            int digit = n%10;
            if(digit == 1){
                one++;
            }
            else if(digit==0){
                zero++;
            }
            n=n/10;

        }
        System.out.println("The number of ones:" + one);
        System.out.println("The number of zeros:" + zero);
    }
}
