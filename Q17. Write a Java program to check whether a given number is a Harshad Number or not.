import java.util.*;
public class Main{
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int n = sc.nextInt();
        int b = n;
        int sum =0;
        while(n!=0){
            int digit = n%10;
            sum = sum+digit;
            n = n/10;
        }
        
        if(b%sum==0){
            System.out.println("Harshad Number");
        }
        else{
            System.out.println("Not a Harshad Number");
        }
        
     }
}
